@model ProjetoLivrariaNOITE.Models.ClLivros
@{
    ViewBag.Title = "Cadastro do Autor";
}

<h2>Cadastro do Autor</h2>

@using (Html.BeginForm("CadAutor", "Home", FormMethod.Post, new { enctype = "multipart/formdata" }))
{
    @Html.LabelFor(m => m.nomeAutor)
    <br />
    <br />
    @Html.EditorFor(m => m.nomeAutor)
    <br />
    <br />
    @Html.DropDownList("status", "Escolha o Status:")
    <br />
    <br />
    <input type="submit" value="Cadastrar" />
}